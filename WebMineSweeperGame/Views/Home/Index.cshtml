@model IEnumerable<MineSweeperAPI.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">NEW GAME!</a>
</p>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XDimension)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YDimension)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfBombs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameIsOver)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.XDimension)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YDimension)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfBombs)
                </td>
                <td>
                    @(item.GameIsOver? "TRUE" : "FALSE")  
                </td>
                <td>
                    @if (item.GameIsOver)
                    {
                        <a href='@Url.Action("Play", "Home", new { id = item.Id })' id="showBtn" class="btn bg-info mr-1">SHOW</a>
                    }
                    else
                    {
                        <a href='@Url.Action("Play", "Home", new { id = item.Id })' id="playBtn" class="btn bg-success mr-1">PLAY</a>
                    }
                    | <a href='@Url.Action("Delete", "Home", new { id = item.Id })' id="deleteBtn" class="btn bg-danger mr-1" onclick="return confirm('Are you sure you want to delete?');"><i class="fas fa-trash-alt text-white"></i>Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>


